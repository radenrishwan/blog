---
import { Icon } from "astro-icon/components";

const songs = [
    {
        thumbnail: "https://source.unsplash.com/bYuI23mnmDQ",
        title: "In The End",
        artist: "Felt",
        url: "https://test.com",
    },
    {
        thumbnail: "https://source.unsplash.com/bYuI23mnmDQ",
        title: "India India",
        artist: "John Lennon",
        url: "https://test.com",
    },
    {
        thumbnail: "https://source.unsplash.com/bYuI23mnmDQ",
        title: "白日夢 (feat. 倚水)",
        artist: "Tayori",
        url: "https://test.com",
    },
    {
        thumbnail: "https://source.unsplash.com/bYuI23mnmDQ",
        title: "Different Kind Of Love",
        artist: "Felt",
        url: "https://test.com",
    },
    {
        thumbnail: "https://source.unsplash.com/bYuI23mnmDQ",
        title: "Fireflies",
        artist: "Owl City",
        url: "https://test.com",
    },
    {
        thumbnail: "https://source.unsplash.com/bYuI23mnmDQ",
        title: "Setting Sun",
        artist: "Yorushika",
        url: "https://test.com",
    },
];

const playIcon = "play";
const linkIcon = "link";
---

<p
    class="mb-5 flex flex-row gap-2 border-l-4 border-primary pl-4 text-2xl font-semibold"
    id="title"
>
    Check out my gallery
    <span class="text-gray-500" id="hastag"> # </span>
</p>
<div class="flex flex-row gap-5">
    <div class="basis-1/2">
        <div class="p-5 sm:p-8">
            <div
                class="columns-1 gap-5 sm:columns-2 sm:gap-8 md:columns-3 lg:columns-4 [&>img:not(:first-child)]:mt-8"
            >
                <img src="https://source.unsplash.com/bYuI23mnmDQ" />
                <img src="https://source.unsplash.com/Nllx4R-2c3o" />
                <img src="https://source.unsplash.com/lp40q07DIe0" />
                <img src="https://source.unsplash.com/wfalq01jJuU" />
                <img src="https://source.unsplash.com/rMHNK_skwwU" />
                <img src="https://source.unsplash.com/WBMjuGpbrCQ" />
                <img src="https://source.unsplash.com/nCUZ5BYBL_o" />
                <img src="https://source.unsplash.com/3u4fzMQZhjc" />
                <img src="https://source.unsplash.com/haOIqIPSwps" />
            </div>
            <p class="mt-5 text-center text-sm font-extralight">
                My photos collection
            </p>
        </div>
    </div>
    <div class="flex basis-1/2 flex-col items-center justify-center">
        <div class="grid grid-cols-3 gap-5 place-items-center" id="songs">
            {
                songs.map((song) => (
                    <div class="flex flex-col gap-3 rounded-md bg-slate-950 p-2">
                        <div class="relative">
                              <img src={song.thumbnail} class="h-[180px] w-[180px] rounded-md" />
                            <div class="absolute left-0  top-0 flex h-[180px] w-[180px] items-center justify-center gap-2 bg-black bg-opacity-40 text-primary opacity-0 transition duration-100 ease-in-out hover:opacity-100">
                                <Icon name={playIcon} class="h-5 w-5 fill-primary" />
                                <Icon name={linkIcon} class="h-5 w-5 fill-primary" />
                            </div>
                        </div>
                        <p class="text-md font-semibold">{song.title}</p>
                        <p class="text-sm font-light">{song.artist}</p>
                    </div>
                ))
            }
        </div>
        <p class="mt-5 text-center text-sm font-extralight">
            Currently favorite songs
        </p>
    </div>
</div>

