---
import { Image } from "astro:assets";

import logo from "../../public/assets/logo.png";

import { Icon } from "astro-icon/components";

const socialMedia = [
  {
    name: "twitter",
    src: "x",
    link: "https://twitter.com/seioraswel",
  },
  {
    name: "instagram",
    src: "instagram",
    link: "https://instagram.com/radenrishwan",
  },
  {
    name: "linkedin",
    src: "linkedin",
    link: "https://instagram.com/radenrishwan",
  },
  {
    name: "github",
    src: "github",
    link: "https://github.com/radenrishwan",
  },
];
---

<footer class="bg-slate-950">
  <div
    class="container mx-auto flex flex-col-reverse gap-4 lg:gap-0 lg:flex-row lg:items-center px-4 lg:px-14 py-10"
  >
    <div id="logo" class="flex basis-1/3 flex-col lg:flex-row lg:items-center gap-2">
      <a href="/" class="text-md hover:text-primary">
        <Image src={logo} format="png" alt="logo" loading="lazy" class="w-10" />
      </a>
      <div class="font-bold text-sm">
        Copyright 2024-2024 <br />
        <span class="text-xs font-extralight">
          by Raden Mohamad Rishwan.
          All Rights Reserved
        </span>
      </div>
    </div>
    <div class="basis-1/3">
      <p class="text-md font-semibold">Quick Links</p>
      <ul class="lg:mt-5 mt-2 flex flex-col gap-2">
        <li>
          <a href="/" class="hover:text-primary"> Home </a>
        </li>
        <li>
          <a href="/" class="hover:text-primary"> Blog </a>
        </li>
        <li>
          <a href="/" class="hover:text-primary"> About </a>
        </li>
        <li>
          <a href="/" class="hover:text-primary"> Gallery </a>
        </li>
      </ul>
    </div>
    <div class="basis-1/3">
      <p class="text-md font-semibold">You can find me out</p>
      <ul class="lg:mt-5 mt-2 flex flex-col gap-2">
        {
          socialMedia.map((social) => (
            <li>
              <a
                href={social.link}
                class="hover:text-primary flex items-center gap-2"
              >
                <Icon name={social.src} class="text-primary" />
                <p>{social.name}</p>
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</footer>
